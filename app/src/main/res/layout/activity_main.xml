<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="289dp"
            android:layout_weight="1"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            app:srcCompat="@drawable/acceuil" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Score:" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Trouver ce Mot:" />

        <TextView
            android:id="@+id/mot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="58px"
            android:layout_weight="1"
            android:text="#######" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"

                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:showDividers="middle">

                <Button
                    android:id="@+id/a"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="A" />

                <Button
                    android:id="@+id/b"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="B" />

                <Button
                    android:id="@+id/c"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="C" />

                <Button
                    android:id="@+id/d"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="D" />

                <Button
                    android:id="@+id/e"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="E" />

                <Button
                    android:id="@+id/f"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="F" />

                <Button
                    android:id="@+id/g"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="G" />

                <Button
                    android:id="@+id/h"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="H" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10px"
                android:paddingRight="10px">

                <Button
                    android:id="@+id/i"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="I" />

                <Button
                    android:id="@+id/j"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="J" />

                <Button
                    android:id="@+id/k"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="K" />

                <Button
                    android:id="@+id/l"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="L" />

                <Button
                    android:id="@+id/m"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="M" />

                <Button
                    android:id="@+id/n"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="N" />

                <Button
                    android:id="@+id/o"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="O" />

                <Button
                    android:id="@+id/p"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="P" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10px"
                android:paddingRight="10px">

                <Button
                    android:id="@+id/q"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="Q" />

                <Button
                    android:id="@+id/r"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="R" />

                <Button
                    android:id="@+id/s"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="S" />

                <Button
                    android:id="@+id/t"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="T" />

                <Button
                    android:id="@+id/u"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="U" />

                <Button
                    android:id="@+id/v"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="V" />

                <Button
                    android:id="@+id/w"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="W" />

                <Button
                    android:id="@+id/x"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="X" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10px"
                android:paddingRight="10px">

                <Button
                    android:id="@+id/y"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="Y" />

                <Button
                    android:id="@+id/z"
                    android:layout_width="49px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:onClick="onclick"
                    android:text="Z" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="10px"
        android:paddingEnd="10px">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:onClick="click_restart"
            android:text="Debuter le jeu" />
    </LinearLayout>

</android.widget.LinearLayout>